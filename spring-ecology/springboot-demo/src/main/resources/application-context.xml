<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <!--Spring 配置Bean文件-->
    <bean id="person" class="com.ecology.springboot.entity.User">
        <property name="age" value="18"></property>
        <property name="userName" value="小宝"></property>
        <property name="userPwd" value="123456"></property>
        <property name="aliasName" value="小芳"></property>
    </bean>

    <!--让spring容器扫描到-->
    <bean id="mySmartInitializingSingleton" class="com.ecology.springboot.service.MySmartInitializingSingleton"/>
</beans>