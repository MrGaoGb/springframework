<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.3.xsd" default-autowire="byName">

    <!--@1-->
    <bean id="serviceA" class="com.series.demo.test.DiAutowireByName$ServiceA">
        <property name="desc" value="serviceA"></property>
    </bean>
    <!--@2-->
    <bean id="serviceB" class="com.series.demo.test.DiAutowireByName$ServiceB">
        <property name="desc" value="serviceB"></property>
    </bean>

    <bean id="serviceB2" class="com.series.demo.test.DiAutowireByName$ServiceB">
        <property name="desc" value="serviceB2"></property>
    </bean>

    <bean name="diAutowireByName1" class="com.series.demo.test.DiAutowireByName" autowire="byType">
        <property name="serviceB" ref="serviceB"></property>
        <property name="serviceA" ref="serviceA"></property>
    </bean>

    <!--当配置了自动注入，还可以使用手动的方式自动注入进行覆盖，手动的优先级更高一些-->
    <bean name="diAutowireByName2" class="com.series.demo.test.DiAutowireByName" autowire="byType">
        <property name="serviceB" ref="serviceB2"></property>
    </bean>


</beans>