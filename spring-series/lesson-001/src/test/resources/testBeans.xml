<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <!--
    定义一个Bean
    id: bean的唯一标识
    name: 相当于别名一样
    class: bean的类型，完整类名称
    <bean id="bean唯一标识" name="bean名称" class="完整类型名称" factory-bean="工厂bean名称" factory-method="工厂方法"/>
    -->
    <!--创建一个单例bean
    scope设置为singleton
    若将lazy-init属性更改为true时，在Spring容器启动的时候不会被创建出来!
    -->
    <bean id="beanScopeModel" class="com.series.demo.createbean.BeanScopeModel" scope="singleton">
        <constructor-arg name="beanScope" value="singleton"/>
    </bean>
</beans>